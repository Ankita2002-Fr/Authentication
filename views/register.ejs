<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Register</h1>

  <% if(typeof alert!="undefined"){ %>
  <%  alert.forEach(function(error){ %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <%= error.msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <%  })  %>
  <%  }  %>


  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" name="userName" value=""class="form-control"><br>

              <label for="dob">Date of birth</label>
              <input type="date" name="dob" value=""class="form-control"><br>

              <label for="age">Age</label>
              <input type="number" name="age" value=""class="form-control"><br>

              <label for="">Gender</label><br>
              <input type="radio" id="male" name="Gender" value="Male">
              <label for="male">Male</label><br>
              <input type="radio" id="female" name="Gender" value="Female">
              <label for="female">Female</label><br>
              <input type="radio" id="Other" name="Gender" value="Other">
              <label for="Other">Other</label><br> <br>

              <label for="Address">Address</label>
              <input type="text" name="Address" value=""class="form-control"><br>

              <label for="Mob no">Mobile no</label>
              <input type="number" name="Mobile_no" value=""class="form-control"><br>

              <label for="email">Email</label>
              <input type="email" class="form-control" name="userEmail"><br>

              <label for="file">Resume</label>
              <input type="file" class="form-control" name="File"><br>

              <label for="password">Password</label>
              <input type="password" class="form-control" name="password"><br>

              <label for="cnfpassword">Confirm password</label>
              <input type="password" class="form-control" name="cnfpassword"><br>

              <button type="submit" class="btn btn-primary">Register</button> <br>
            </div>

          </form>

        </div>
      </div>
    </div>

    <!-- <div class="col-sm-4">
      <div class="card social-block">
        <div class="card-body">
          <a class="btn btn-block" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign Up with Google
          </a>
        </div>
      </div>
    </div> -->

  </div>
</div>

<%- include('partials/header') %>
